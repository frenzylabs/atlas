{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "strict": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "lib",
  }
}