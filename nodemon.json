{
  "restartable": "rs",
  "ignore": [
    "node_modules",
    ".git",
    ".gitignore",
    ".envrc",
    "README.md",
    "package.json",
    "nodemon.json",
    ".vscode",
    "yarn.lock",
    "yarn-error.log"
  ],
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,scss,html,tsx",
  "watch": [
    "./lib/data/src",
    "./lib/appendix/src",
    "./lib/env/src",
    "./services/cdn/src",
    "./services/api/src",
    "./services/web/src",
    "./services/oauth/src",
    "./services/server/src"
  ]
}
